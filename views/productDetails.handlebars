<section class="productDetail">
    <div class="productDetail__path">
        <a href="/tienda" class="productDetail__link">Tienda</a>
        <p class="productDetail__text productDetail__text--separator">/</p>
        <p class="productDetail__title productDetail__title--small">{{product.name}}</p>
    </div>

    <div class="details">
        <div class="details__image">
            <img src="/images{{product.image}}" alt="">
        </div>
        

        <div class="details__info">
            <h1 class="details__title">{{product.name}}</h1>

            <div class="details__rating">
                <img src="/images/ratingBlack.png" alt="" class="details__ratingIcon">
                <p class="details__ratingValue">{{product.rating}}</p>
            </div>

            <p class="details__price details__body">${{product.price}}</p>

            <p class="details__description details__body">{{product.description}}</p>

            <button class="details__add">AÃ±adir al carrito</button>
        </div>
    </div>
    
</section>

<script src="/scripts/product.js"></script>
